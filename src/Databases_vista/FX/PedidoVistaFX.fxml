<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="618.0" prefWidth="839.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Databases_controlador.FX.PedidosControladorFX">
    <TableView fx:id="tablaClientes" layoutX="150.0" layoutY="103.0" prefHeight="356.0"
               prefWidth="667.0">

        <columns>
            <TableColumn fx:id="colCliente" prefWidth="82.0" text="Cliente"/>
            <TableColumn fx:id="colArticulo" prefWidth="104.0" text="Artículo"/>
            <TableColumn fx:id="colCantidad" prefWidth="84.0" text="Cantidad"/>
            <TableColumn fx:id="colFecha" prefWidth="71.0" text="Fecha"/>
            <TableColumn fx:id="colFechaEnvio" prefWidth="81.0" text="Fecha envio"/>
            <TableColumn fx:id="colTiempoPrep" prefWidth="86.0" text="Tiempo preparación"/>
            <TableColumn fx:id="colEnviado" prefWidth="82.0" text="Se ha enviado?"/>
        </columns>
    </TableView>
    <Button fx:id="btnAdd" layoutX="60.0" layoutY="552.0" mnemonicParsing="false" onAction="#addInvoice"
            prefHeight="40.0" prefWidth="90.0" text="Añadir" AnchorPane.leftAnchor="60.0">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <Button fx:id="btnUpdate" layoutX="370.0" layoutY="552.0" mnemonicParsing="false" onAction="#updateInvoice"
            prefHeight="40.0" prefWidth="100.0" text="Actualizar">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <Button fx:id="btnDelete" layoutX="698.0" layoutY="552.0" mnemonicParsing="false" onAction="#deleteInvoice"
            prefHeight="40.0" prefWidth="100.0" text="Borrar">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
</AnchorPane>