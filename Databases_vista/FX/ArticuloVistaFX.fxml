<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="618.0" prefWidth="839.0" xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="Databases_controlador.FX.ArticuloControladorFX">
    <TableView fx:id="tablaArticulos" layoutX="150.0" layoutY="103.0" onMouseClicked="#select" prefHeight="356.0"
               prefWidth="667.0">
        <columns>
            <TableColumn fx:id="colCode" prefWidth="82.0" text="Código Artículo"/>
            <TableColumn fx:id="colDescription" prefWidth="104.0" text="Descripción"/>
            <TableColumn fx:id="colPrepTime" prefWidth="84.0" text="Tiempo Preparación"/>
            <TableColumn fx:id="colPrice" prefWidth="71.0" text="Precio"/>
            <TableColumn fx:id="colShipping" prefWidth="81.0" text="Gastos de envío"/>
        </columns>
    </TableView>
    <Button fx:id="btnAdd" layoutX="60.0" layoutY="552.0" mnemonicParsing="false" onAction="#addArticle"
            prefHeight="40.0" prefWidth="90.0" text="Añadir" AnchorPane.leftAnchor="60.0">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <Button fx:id="btnUpdate" layoutX="370.0" layoutY="552.0" mnemonicParsing="false" onAction="#updateArticle"
            prefHeight="40.0" prefWidth="100.0" text="Actualizar">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <Button fx:id="btnDelete" layoutX="698.0" layoutY="552.0" mnemonicParsing="false" onAction="#deleteArticle"
            prefHeight="40.0" prefWidth="100.0" text="Borrar">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>

    <Label layoutX="421.0" layoutY="59.0" text="Articulos">
        <font>
            <Font size="21.0"/>
        </font>
    </Label>

</AnchorPane>